<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Create Tournament</title>
    <%- include("../partials/heading") %>
    <body>
      <%- include("../partials/admin_nav")%>
      <section class="section">
      <div class="container is-widescreen m-4">
        <div class="columns is-mobile">
  <div class="column is-three-fifths is-offset-one-fifth m-2">
    <div class="box m-4">

<form id="myform" action="/admin/store" method="post" onSubmit="return validate()">
<div class="field">
   <label class="label">Name Of Tournament<span id="star">*</span></label>
  <div class="control has-icons-left has-icons-right">
    
    <input class="input " type="text" placeholder="Tournament name" name="tname" minlength="7" value="<%=res_data.tname%>"> 
    <span class="icon is-small is-left">
      <i class="fa fa-info"></i>
    </span>
    <small></small>
    </div>
    </div>
<div class="field">
   <label class="label">Sport Of Tournament<span id="star">*</span></label>
  <div class="control has-icons-left has-icons-right">
    <input class="input " type="text" placeholder="Tournament name" name="sport" required value="<%=res_data.sport%>">
    <span class="icon is-small is-left">
      <i class="fa fa-futbol-o"></i>
    </span>
     <small></small>
    </div>
    </div>
    <div class="field">
   <label class="label">Sport Type<span id="star">*</span></label>
   <div class="control has-icons-left"></p>
                    <div class="select">
                      <select class="is-hovered" name="sport_type" id="sport_type" onChange="toggle_in_out()">
                        <option value="single" selected>Single</option>
                        <option value="team">Team</option>

                      </select>
                  
                  </div>
                    <span class="icon is-small is-left">
                        <i class="fa fa-group"></i>
                      </span>
                    </div>
    </div>
    <div class="field" id="for_single" >
   <label class="label">Number of Players for Single Tournament<span id="star">*</span></label>
  <div class="control has-icons-left has-icons-right">
    <% let an="" ;if(res_data.number_single_player==0){ an=""} else{an=res_data.number_single_player}%>
    <input class="input " type="number" placeholder="Max Number of Participants"  name="number_single_player" value="<%=an%>">
    <span class="icon is-small is-left">
      <i class="fa fa-info"></i>
    </span>
     <small></small>
    </div>
    </div>
    <div class="field" id="for_team">
   <label class="label">Number of Teams<span id="star">*</span></label>
  <div class="control has-icons-left has-icons-right">
     <% let ann="" ;if(res_data.numofteams==0){ ann=""} else{ann=res_data.numofteams}%>
    <input class="input " type="number" placeholder="Number of Teams " name="numofteams" value="<%=ann%>">
    <span class="icon is-small is-left">
      <i class="fa fa-info"></i>
    </span>
     <small></small>
    </div>
    </div>
 <div class="field" id="for_team_players">
   <label class="label">Number of Players Per Team<span id="star">*</span></label>
  <div class="control has-icons-left has-icons-right">
      <% let annn="" ;if(res_data.playerspteam==0){ annn=""} else{annn=res_data.playerspteam}%>
    <input class="input " type="number" placeholder="Number of Players per Team" name="playerspteam"  value="<%=ann%>">
    <span class="icon is-small is-left">
      <i class="fa fa-info"></i>
    </span>
     <small></small>
    </div>
    </div>
 <div class="field" >
   <label class="label">Start Date<span id="star">*</span></label>
  <div class="control has-icons-left has-icons-right">
    <% var min_date=moment().format('YYYY-MM-DD')%>
    <input class="input " type="date" min=<%=min_date%> placeholder="Start Date of Tournament" name="start_date" required>
    <span class="icon is-small is-left">
      <i class="fa fa-info"></i>
    </span>
     <small></small>
    </div>
    </div>
 <div class="field" >
   <label class="label">End Date<span id="star">*</span></label>
  <div class="control has-icons-left has-icons-right">
    <input class="input " type="date"min=<%=min_date%> placeholder="End Date of Tournament" name="end_date" required>
    <span class="icon is-small is-left">
      <i class="fa fa-info"></i>
    </span>
     <small></small>
    </div>
    </div>
    <div class="field mb-0">
                    <p class="has-text-red" style="color: red;" id="err_dis" ></p>
                  </div>
                   <% msg.forEach(m => { %>
                  <h2 class="has-text-danger"><%= m %></h2>
                  <%})%>
     <div class="field has-text-centered mb-0">
            
                    <input type="submit" class="button is-success" value="Submit">
                  </div>


</form>







    </div>
  </div>
</div>
</section>
    </body>
  </head>
     <%- include("../partials/footer") %>
  <script src="/js/tournament_val.js"></script>
  <style>
    #for_team
    {
        display: none;
    }
    #for_team_players
    {
        display: none;
    }
    #star
    {
        color: red;
    }
    #searchandinput
    {
      visibility: hidden;
    }
    #searchicon
    {
    visibility: hidden;
    }
    #Searchone
    {
      visibility: hidden;
    }
    small
    {
      color: red;
      font-size: small;
    }
       @keyframes slideInLeft {
          0% {
            transform: translateY(-100%);
          }
          100% {
            transform: translateY(0);
          }
        }
        section {
          animation: 1s ease-out 0s 1 slideInLeft;
animation-timing-function: ease-in-out;
-webkit-animation-timing-function: ease-in-out;
          padding: 40px;
        }
  </style>
</html>
